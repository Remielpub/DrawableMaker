<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.childdddd.libdrawalemaker.utils.GradientDrawableUtil"
            alias="g"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv1"
            style="@style/text_style"
            android:text="添加【圆角】【背景颜色】"
            android:layout_marginTop="60dp"
            bg_addCorners="@{g.addCorners(g.cornerRadius(10), @color/purple_200)}"/>

        <TextView
            android:id="@+id/tv2"
            style="@style/text_style"
            android:text="添加【实线边框】"
            android:layout_marginTop="30dp"
            bg_addStroke="@{g.addStroke(1, @color/purple_200)}"/>

        <TextView
            android:id="@+id/tv3"
            android:text="添加【虚线边框】"
            style="@style/text_style"
            android:layout_marginTop="30dp"
            bg_addStroke="@{g.addDash(2, @color/purple_200, 10, 10)}" />

        <TextView
            android:id="@+id/tv4"
            android:text="同时添加【圆角】【背景颜色】【实线边框】(方式1)"
            style="@style/text_style"
            android:layout_margin="30dp"
            bg_addCorners="@{g.addCorners(g.cornerRadius(10), @color/purple_200)}"
            bg_addStroke="@{g.addStroke(2, @color/teal_200)}"/>

        <TextView
            android:id="@+id/tv5"
            android:text="同时添加【圆角】【背景颜色】【虚线边框】(方式1)"
            style="@style/text_style"
            android:layout_margin="30dp"
            bg_addCorners="@{g.addCorners(10, @color/purple_200)}"
            bg_addStroke="@{g.addDash(2, @color/teal_200, 10, 10)}"/>

        <TextView
            android:id="@+id/tv6"
            android:text="同时添加【部分圆角】【背景颜色】【实线边框】(方式2)"
            style="@style/text_style"
            android:layout_margin="30dp"
            bg_corners="@{g.cornerRadius(0, 10, 10, 0)}"
            bg_solidColor="@{@color/purple_200}"
            bg_strokeWitdh="@{2}"
            bg_strokeColor="@{@color/teal_200}"/>

        <TextView
            android:id="@+id/tv7"
            android:text="同时添加【部分圆角】【背景颜色】【虚线边框】(方式2)"
            style="@style/text_style"
            android:layout_margin="30dp"
            bg_corners="@{g.cornerRadius(0, 10, 10, 0)}"
            bg_solidColor="@{@color/purple_200}"
            bg_strokeWitdh="@{2}"
            bg_strokeColor="@{@color/teal_200}"
            bg_dashWidth="@{10}"
            bg_dashGap="@{10}"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
